# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secret
POSTGRES_MULTIPLE_DATABASES=kratos,app

# Kratos
KRATOS_DSN=postgres://postgres:secret@postgres:5432/kratos?sslmode=disable
KRATOS_SECRETS_COOKIE=PLEASE-CHANGE-ME-I-AM-VERY-INSECURE
KRATOS_SECRETS_CIPHER=32-LONG-SECRET-NOT-SECURE-AT-ALL

# GitLab OAuth - Get these from GitLab User Settings -> Applications
# Callback URL: http://127.0.0.1:4433/self-service/methods/oidc/callback/gitlab
GITLAB_CLIENT_ID=your_gitlab_application_id
GITLAB_CLIENT_SECRET=your_gitlab_secret

# Google OAuth - Get these from Google Cloud Console -> APIs & Services -> Credentials
# Callback URL: http://127.0.0.1:4433/self-service/methods/oidc/callback/google
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# App Database
APP_DATABASE_URL=postgres://postgres:secret@postgres:5432/app?sslmode=disable

# Kratos URLs (for the app to communicate with Kratos)
KRATOS_PUBLIC_URL=http://kratos:4433
KRATOS_ADMIN_URL=http://kratos:4434

# Browser URLs (for redirects - must use 127.0.0.1 for cookie consistency)
KRATOS_BROWSER_URL=http://127.0.0.1:4433
APP_URL=http://127.0.0.1:3000

# Session
SESSION_SECRET=change-this-super-secret-session-key
